<h1>Groupes</h1>

  <div class="row">
    <% @bands.each do |band| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
        <div class="card-category"><h2><%= band.name %></h2></div>
        <div class="card-description">
            <p>Style: <%= band.style %> --- Rating: <%= band.rating %></p>
            <%= link_to 'Show', band %>
            <%= link_to 'Edit', edit_band_path(band) %>
            <%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
      <br/>
    <%= link_to 'New Band', new_band_path %>
